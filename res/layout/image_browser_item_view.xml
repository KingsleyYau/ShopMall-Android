<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center" >

    <com.lee.beautifulgirl.imageBrows.ImageBrowserScaleView
        android:id="@+id/image_browser_item"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:scaleType="matrix" >
    </com.lee.beautifulgirl.imageBrows.ImageBrowserScaleView>

    <lbs.goodplace.com.View.ImageBrowserProgressBar
        android:id="@+id/image_browser_loading_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center|center_horizontal"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone" >

        <ProgressBar
            android:id="@+id/btmprogress"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="6dp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/themestore_btmProgress_text"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:gravity="center_vertical"
            android:text="加载中"
            android:textSize="16dp" />
    </lbs.goodplace.com.View.ImageBrowserProgressBar>

    <TextView
        android:id="@+id/imagebrower_image_damage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical|center_horizontal"
        android:visibility="gone"
        android:textSize="16dp" />

</FrameLayout>